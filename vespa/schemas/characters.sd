schema characters {
    document characters {
        field id type string {
            indexing: summary | attribute
            attribute: fast-search
        }
        field series type string {
            indexing: summary | attribute
        }
        field name type string {
            indexing: index | summary
            index: enable-bm25
        }
        field description type string {
            indexing: index | summary
            index: enable-bm25
        }
    }

    fieldset default {
        fields: name, description
    }
}
